{
	"sap.app": {
		"id": "karina.komarovich",
		"type": "application",
		"i18n": "i18n/i18n.properties",
		"title": "{{appTitle}}",
		"description": "{{appDescription}}",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"dataSources": {
			"mainService": {
				"uri": "http://localhost:3000/odata",
				"type": "OData",
				"settings": {
					"odataVersion": "2.0"
				}
			}
		}
	},
	"sap.ui": {
		"deviceTypes": {
			"desktop": true,
			"tablet": true,
			"phone": true
		},
		"supportedThemes": [
			"sap_belize"
		]
	},
	"sap.ui5": {
		"rootView": "karina.komarovich.view.App",
		"routing": {
			"config": {
				"routerClass": "sap.m.routing.Router",
				"viewType": "XML",
				"viewPath": "karina.komarovich.view",
				"controlId": "RootApp",
				"controlAggregation": "pages",
				"bypassed": {
					"target": [
						"notFound"
					]
				},
				"async": true
			},
			"routes": [
				{
					"pattern": "",
					"name": "StoresOverview",
					"target": [
						"storesOverview"
					]
				},

				{
					"pattern": "StoreDetails/{storeId}",
					"name": "StoreDetails",
					"target": [
						"storeDetails"
					]
				},

				{
					"pattern": "StoreDetails/{storeId}/ProductDetails/{productId}",
					"name": "ProductDetails",
					"target": [
						"productDetails"
					]
				}
			],

			"targets": {
				"storesOverview": {
					"viewName": "StoresOverview",
					"viewId": "storesOverview",
					"viewLevel": 1
				},
				
				"storeDetails": {
					"viewName": "StoreDetails",
					"viewId": "storeDetails",
					"viewLevel": 2
				},

				"productDetails": {
					"viewName": "ProductDetails",
					"viewId": "productDetails",
					"viewLevel": 3
				},

				"notFound": {
					"viewName": "NotFound",
					"viewId": "notFound"
				}
			}
		},
		"dependencies": {
			"minUI5Version": "1.54.0",
			"libs": {
				"sap.m": {}
			}
		},
		"models": {
			"i18n": {
				"type": "sap.ui.model.resource.ResourceModel",
				"settings": {
					"bundleName": "karina.komarovich.i18n.i18n"
				}
			},
			"odata": {
				"dataSource": "mainService",
				"settings": {
					"defaultBindingMode": "TwoWay",
					"useBatch": false,
					"defaultCountMode": "None"
				}
			}
		}
	}
}