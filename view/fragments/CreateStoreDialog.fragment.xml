<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.ui.layout.form"
	xmlns:core="sap.ui.core" >
	<Dialog
		id="EmployeeDialog"
		title="{i18n>CreateStoreDialogTitle}"
		afterClose="onAfterClose">
		<f:SimpleForm
			maxContainerCols="1"
			layout="ResponsiveGridLayout"
			labelSpanL="12"
			labelSpanM="12"
			emptySpanL="0"
			emptySpanM="0"
			columnsL="1"
			columnsM="1">
			<f:content>
				<Label text="{i18n>StoreNameTitle}"/>
				<Input 
					value="{
						path: 'Name',
						type: 'sap.ui.model.type.String',
						constraints: {
							minLength: 1,
							maxLength: 1000
						}
					}" 
					placeholder="{i18n>StoreNameInput}" 
					required="true"
					id="StoreName"/>
				<Label text="{i18n>StoreEmailTitle}"/>
				<Input 
					value="{
						path: 'Email',
						type: 'sap.ui.model.type.String',
						constraints: {
							minLength: 1,
							maxLength: 1000
						}
					}" 
					placeholder="{i18n>StoreEmailInput}"
					required="true"
					id="StoreEmail"/>
				<Label text="{i18n>StorePhoneNumberTitle}"/>
				<Input 
					value="{
						path: 'PhoneNumber',
						type: 'sap.ui.model.type.Integer',
						constraints: {
							minLength: 1,
							maxLength: 11
						}
					}" 
					placeholder="{i18n>StorePhoneNumberInput}"
					required="true"
					id="StorePhone"/>
				<Label text="{i18n>StoreAddressTitle}"/>
				<Input 
					value="{
						path: 'Address',
						type: 'sap.ui.model.type.String',
						constraints: {
							minLength: 1,
							maxLength: 1000
						}
					}" 
					placeholder="{i18n>StoreAddressInput}"
					required="true"
					id="StoreAddress"/>
				<Label text="{i18n>StoreEstablishedTitle}" labelFor="StoreEstablished"/>
				<DatePicker 
					change="Established" 
					placeholder="{i18n>StoreEstablishedInput}"
					required="true"
					id="StoreEstablished"/>
				<Label text="{i18n>StoreFloorAreaTitle}"/>
				<Input 
					value="{
						path: 'FloorArea',
						type: 'sap.ui.model.type.Integer',
						constraints: {
							minLength: 1,
							maxLength: 100
						}
					}" 
					placeholder="{i18n>StoreFloorAreaInput}"
					required="true"
					id="StoreFloorArea"/>
			</f:content>
		</f:SimpleForm>

		<buttons>
			<Button text="{i18n>CreateButton}" press="onCreateStorePress" />
			<Button text="{i18n>CancelButton}" press="onCancelPress" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>