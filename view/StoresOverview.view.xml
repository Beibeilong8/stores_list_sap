<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	height="100%"
	controllerName="karina.komarovich.controller.StoresOverview">
	<f:DynamicPage 
		class="sapUiNoContentPadding"
		showFooter="true">
		<f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="{i18n>StoresOverviewTitle}"/>
				</f:heading>
				<f:breadcrumbs>
					<Breadcrumbs>
						<Link press="onNavToStoresOverview" text="{i18n>BreadcrumbsStoresOverview}"/>
					</Breadcrumbs>
				</f:breadcrumbs>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader >
				<SearchField 
					width="100%" 
					class="sapUiSmallMargin" 
					liveChange=".onSearch" 
					showRefreshButton="true"
					search="onStoresSearch"
					placeholder="{i18n>SearchFieldPlaceholder}"/>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<List 
				id="StoresTable"
				items="{odata>/Stores}" 
				noDataText="{i18n>StoresListNoDataText}"
				>
				<ObjectListItem 
					title="{odata>Name}"
					type="Active" 
					press="onNavToStoreDetails" 
					number="{odata>FloorArea}" 
					numberUnit="{i18n>FloorNumberUnit}">
					<ObjectAttribute text="{odata>id}" visible="false"/>
					<ObjectAttribute text="{odata>Address}" />
				</ObjectListItem>
			</List>
		</f:content>	
		<f:footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button 
					type="Ghost"
					icon="sap-icon://add"
					text="{i18n>CreateButton}"
					press="onOpenDialogCreateStore" />
			</OverflowToolbar>
		</f:footer> 			
	</f:DynamicPage>
</mvc:View>